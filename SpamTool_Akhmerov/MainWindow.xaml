<metro:MetroWindow 
    x:Class="SpamTool_Akhmerov.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:ctrl="clr-namespace:SpamTool_Akhmerov.Controls"
    xmlns:local="clr-namespace:SpamTool_Akhmerov"
    xmlns:data="clr-namespace:SpamTool_Akhmerov.lib.Data;assembly=SpamTool_Akhmerov.lib"
    xmlns:view="clr-namespace:SpamTool_Akhmerov.View"
    mc:Ignorable="d"
        Title="{Binding Title}"
        DataContext=
        "{Binding MainWindowModel, 
                  Source={StaticResource Locator}}"
        Height="500" Width="815"
        TitleCharacterCasing="Normal"
        BorderThickness="0" 
        GlowBrush="Black"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Файл">
                    <MenuItem Header="Создать"/>
                    <MenuItem Header="Открыть"/>
                    <MenuItem Header="Закрыть"/>
                    <MenuItem Header="Сохранить"/>
                    <Separator/>
                    <MenuItem Header="Выход" Click="OnExitClick"/>
                </MenuItem>
                <MenuItem Header="Помощь">
                    <MenuItem Header="О программе" IsEnabled="False"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <StatusBar 
            DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding Status}"/>
        </StatusBar>
        <StackPanel Orientation="Horizontal">
            <Button
                x:Name="BtnPreviousTab"
                Click="OnBtnPreviousTabClick"
                VerticalAlignment="Top"
                Margin="3 9 0 0"
                Width="20"
                Height="25">
                <fa:ImageAwesome 
                    Icon="AngleLeft"
                    Foreground="Red"
                    Height="10"
                    Width="8"/>
            </Button>
            <metro:MetroAnimatedTabControl
                x:Name="TabControlSpamTool"
                TabIndex="0" 
                SelectionChanged="TabControlSpamTool_SelectionChanged">
                <metro:MetroTabItem 
                    Header="Списки рассылки"
                    TabIndex="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ctrl:ControlPanelView
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                PanelText="Отправители"
                                ControlWidth="350"
                                Margin="0 0 5 0"
                                ItemSource="{x:Static data:Senders.List}"
                                SelectedIndex="0"
                                IsVisibled="Visible">
                                <ctrl:ControlPanelView.ListItemTemplate>
                                    <DataTemplate DataType="data:Sender">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}"/>
                                            <TextBlock>:</TextBlock>
                                            <TextBlock Text="{Binding Address}" Opacity="0.5"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ctrl:ControlPanelView.ListItemTemplate>
                            </ctrl:ControlPanelView>
                            <ctrl:ControlPanelView
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                PanelText="Сервера"
                                ControlWidth="350"
                                ItemSource="{x:Static data:MailServers.Servers}"
                                SelectedIndex="0"
                                IsVisibled="Visible">
                                <ctrl:ControlPanelView.ListItemTemplate>
                                    <DataTemplate DataType="data:Sender">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Address}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ctrl:ControlPanelView.ListItemTemplate>
                            </ctrl:ControlPanelView>
                            <ctrl:ControlPanelView
                                Grid.Row="1"
                                Grid.Column="0"
                                ColumnWidth="0"
                                ControlWidth="Auto"
                                PanelText="Список адресатов"
                                IsVisibled="Hidden"
                                SelectedIndex="0"/>
                        </Grid>
                        <Grid
                            Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <view:RecepientsView 
                                Grid.Column="0"/>
                            <GridSplitter 
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Stretch"
                                Width="1"
                                Background="DarkRed"/>
                            <view:RecipientsEditorView 
                                VerticalAlignment="Top"
                                Grid.Column="1"/>
                        </Grid>
                    </Grid>
                </metro:MetroTabItem>
                <metro:MetroTabItem Header="Планировщик" TabIndex="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <GroupBox Header="Дата/время">
                                <StackPanel>
                                    <Calendar/>
                                    <metro:DateTimePicker/>
                                </StackPanel>
                            </GroupBox>
                            <Button>
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome 
                                        Icon="ClockOutline" 
                                        Height="13">
                                        <fa:ImageAwesome.Foreground>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <LinearGradientBrush.RelativeTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                                        <RotateTransform Angle="-30" CenterY="0.5" CenterX="0.5"/>
                                                        <TranslateTransform/>
                                                    </TransformGroup>
                                                </LinearGradientBrush.RelativeTransform>
                                                <GradientStop Color="Red" Offset="0"/>
                                                <GradientStop Color="DarkRed" Offset="0.8"/>
                                            </LinearGradientBrush>
                                        </fa:ImageAwesome.Foreground>
                                    </fa:ImageAwesome>
                                    <TextBlock 
                                        Text="Запланировать" 
                                        Margin="3,0,0,0"
                                        FontFamily="Comic Sans MS"/>
                                </StackPanel>
                            </Button>
                            <Button
                                x:Name="BtnSendMail">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome 
                                        Icon="Send" 
                                        Height="13">
                                        <fa:ImageAwesome.Foreground>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <LinearGradientBrush.RelativeTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                                        <RotateTransform Angle="-30" CenterY="0.5" CenterX="0.5"/>
                                                        <TranslateTransform/>
                                                    </TransformGroup>
                                                </LinearGradientBrush.RelativeTransform>
                                                <GradientStop Color="Red" Offset="0"/>
                                                <GradientStop Color="DarkRed" Offset="0.75"/>
                                            </LinearGradientBrush>
                                        </fa:ImageAwesome.Foreground>
                                    </fa:ImageAwesome>
                                    <TextBlock 
                                        Text="Отправить сразу" 
                                        FontFamily="Comic Sans MS"
                                        Margin="3,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </metro:MetroTabItem>
                <metro:MetroTabItem Header="Редактор писем" TabIndex="2">

                </metro:MetroTabItem>
                <metro:MetroTabItem Header="Статистика" TabIndex="3">

                </metro:MetroTabItem>

            </metro:MetroAnimatedTabControl>
            <Button
                x:Name="BtnNextTab"
                Click="OnBtnNextTabClick"
                VerticalAlignment="Top"
                Margin="0 9 3 0"
                Width="20"
                Height="25">
                <fa:ImageAwesome 
                    Icon="AngleRight"
                    Foreground="Red"
                    Height="10"
                    Width="8"/>
            </Button>
        </StackPanel>
    </DockPanel>

</metro:MetroWindow>
